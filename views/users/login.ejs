<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <h1 class="col-6 offset-3">Login</h1>
    <div class="col-6 offset-3">
        <form action="/login" method="post" class="needs-validations">
            <div class="mb-3">
                <label for="username" 
                class="from-label">Username</label>
                <input
                name="username"
                id="username"
                class="form-control"
                required
                />
            </div>
            <div class="mb-3">
                <label for="password" 
                class="from-label">Password</label>
                <input
                name="password"
                id="password"
                class="form-control"
                required
                />
            </div>
            <button class="btn btn-success mb-3">Login</button>
        </form> 
    </div>
</div>